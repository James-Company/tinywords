{
  "name": "tinywords",
  "version": "0.1.0",
  "private": true,
  "description": "TinyWords project scaffold from SSOT docs",
  "type": "module",
  "scripts": {
    "dev": "tsx server/src/main.ts",
    "dev:cf": "wrangler pages dev web",
    "build": "mkdir -p web/i18n && cp src/i18n/locales/*.json web/i18n/",
    "deploy": "npm run build && wrangler pages deploy web",
    "test": "tsx tests/run.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "wrangler": "^4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "openai": "^6.22.0"
  }
}
